{
	"name": "visual",
	"on_begin_actions": [{ "action": "StartSelection", "target": "char" }],
	"on_end_actions": [{ "action": "StopSelection" }],
	"commands": [
		{ "keys": [ "<esc>" ], "actions": [ { "action": "ChangeLayer", "target": "normal" } ] },
		{ "keys": [ ">", ">" ], "actions":[ { "action": "Indent", "target": "selection" } ] },
		{ "keys": [ "<", "<" ], "actions":[ { "action": "Outdent", "target": "selection" } ] },
		{ "keys": [ "y" ], "actions":[ { "action": "Yank", "target": "selection" } ] },
		{ "keys": [ "p" ], "actions":[ { "action": "Paste", "target": "selection" } ] },
		{ "keys": [ "d" ], "actions":[ { "action": "Delete", "target": "selection" } ] }
	]
}

